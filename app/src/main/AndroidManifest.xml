<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gearnix">
        <activity
            android:name=".view.DeleteProductActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_product"
            android:theme="@style/Theme.Gearnix" />
        <activity
            android:name=".view.EditProductActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_product"
            android:theme="@style/Theme.Gearnix" />
        <activity
            android:name=".view.ViewProductActivity"
            android:exported="false"
            android:label="@string/title_activity_view_product"
            android:theme="@style/Theme.Gearnix" />

        <activity
            android:name=".view.ProductManagerActivity"
            android:exported="false"
            android:label="@string/title_activity_product_manager"
            android:theme="@style/Theme.Gearnix" />

        <activity
            android:name=".view.AddProductActivity"
            android:exported="false"
            android:label="AddProduct" />
        <activity
            android:name=".view.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".view.ResetPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/Theme.Gearnix" />
        <activity
            android:name=".view.RegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.Gearnix" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Gearnix" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Gearnix">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>